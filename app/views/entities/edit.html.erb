<h1>Edit Entity Category</h1>
<%= form_with(model: [@group, @entity], url: group_entity_path(@group, @entity), local: true, method: :patch, html: { class: "item-form" }) do |f| %>
    <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
   <div>
    <%= f.label :amount %>
    <%= f.number_field :amount %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
<%= link_to 'Back', group_path(@group) %>
