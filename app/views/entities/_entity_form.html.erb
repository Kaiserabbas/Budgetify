<div>
  <%= form_with(model: [@group, @entity], url: group_entities_path(@group), local: true, method: :post, html: { class: "item-form" }) do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name, placeholder: "Enter name", required: true %>
    </div>
    <br>
    <div>
      <%= form.label :amount %>
      <%= form.number_field :amount, placeholder: "Enter amount", required: true %>
    </div>
    <br>
    <div>
      <%= form.label :group_id, "Select Groups" %>
      <%= form.select :group_id, options_for_select(@groups.map { |group| [group.name, group.id] }, @entity.group_id), { class: "browser-default" } %>
    </div>
    <br>
    <div>
      <%= form.submit "Create Item" %>
    </div>
  <% end %>
</div>
